<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:id="@+id/profileFeed_subjectTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:typeface="serif"
        android:text="Subject name"
        android:textColor="@color/colorPrimaryDark"
        />

    <TextView
        android:id="@+id/profileFeed_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:typeface="serif"
        android:textColor="@color/black"
        android:text="Subject category"
        android:layout_below="@+id/profileFeed_subjectTitle"
        />

    <TextView
        android:id="@+id/profileFeed_timestamp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/profileFeed_category"
        android:text="Timestamp"
        android:textSize="14sp"
        android:layout_below="@+id/profileFeed_subjectTitle"
        android:layout_toEndOf="@+id/profileFeed_category"
        android:gravity="right"
        />

</RelativeLayout>