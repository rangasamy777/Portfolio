<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/board_title"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Board title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        />

    <TextView
        android:id="@+id/board_replies"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Board replies"
        android:textSize="14sp"
        android:paddingTop="5dp"
        android:layout_below="@+id/board_title"/>

    <Button
        android:id="@+id/board_view_button"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:text="View board"
        android:background="?android:attr/selectableItemBackground"
        android:textColor="@color/colorPrimary"
        android:layout_toRightOf="@+id/board_replies"
        android:layout_below="@+id/board_title"
        android:layout_alignParentRight="true"
        android:gravity="right|center"/>

</RelativeLayout>